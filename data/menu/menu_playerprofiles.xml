<?xml version="1.0"?>
<dialog>
  <element type="MenuButton" rect="relative: 1, 1, 5, 5" tooltip="Add Player">
    <attributes>
      <attribute key="ImagePath" value="data/images/btn_add.png" />
      <attribute key="Visible" value="false" />
      <attribute key="Name" value="btn_add" />
    </attributes>
  </element>
  
  <element type="tab" rect="relative: 0, 0, 35, 8">
    <attributes>
      <attribute key="Visible" value="true" />
      <attribute key="Name" value="tab" />
    </attributes>
    
    <children>
      <element type="editBox" rect="relative: 2, 1, 30, 3">
        <attributes>
          <attribute key="Name" value="edit_name" />
          <attribute key="Caption" value="Player" />
          <attribute key="Visible" value="true" />
          <attribute key="HTextAlign" value="upperLeft" />
          <attribute key="VTextAlign" value="center" />
        </attributes>
      </element>
      
      <element type="MenuButton" rect="relative: 31, 4, 34, 7" tooltip="Remove Player Profile">
        <attributes>
          <attribute key="Name" value="btn_delete" />
          <attribute key="ImagePath" value="data/images/btn_cancel.png" />
        </attributes>
      </element>
      
      <element type="MenuButton" rect="relative: 26, 4, 29, 7" tooltip="Edit Controls">
        <attributes>
          <attribute key="Name" value="btn_controls" />
          <attribute key="ImagePath" value="data/images/btn_gamepad.png" />
        </attributes>
      </element>
      
      <element type="MenuButton" rect="relative: 22, 4, 25, 7" tooltip="Edit Texture">
        <attributes>
          <attribute key="Name" value="btn_texture" />
          <attribute key="ImagePath" value="data/images/btn_texture.png" />
        </attributes>
      </element>
      
      <element type="staticText" rect="relative: 2, 4, 8, 6" font="small">
        <attributes>
          <attribute key="Caption" value="Controls:" />
        </attributes>
      </element>
      
      <element type="staticText" rect="relative: 7, 4, 20, 6" font="small" tooltip="The controller type of the marble">
        <attributes>
          <attribute key="Name" value="label_controls" />
          <attribute key="Caption" value="Keyboard" />
        </attributes>
      </element>
      
      <element type="staticText" rect="relative: 2, 5, 8, 7" font="small">
        <attributes>
          <attribute key="Caption" value="Texture:" />
        </attributes>
      </element>
      
      <element type="staticText" rect="relative: 7, 5, 20, 7" font="small" tooltip="The texture type of the marble">
        <attributes>
          <attribute key="Name" value="label_texture" />
          <attribute key="Caption" value="Default" />
        </attributes>
      </element>
      
      <element type="image" rect="relative: 31, 1, 33, 3" tooltip="Something's wrong">
        <attributes>
          <attribute key="UseAlphaChannel" value="true" />
          <attribute key="ScaleImage" value="true" />
          <attribute key="Name" value="warning_red" />
        </attributes>
        <custom>
          <attribute key="src" value="file://data/images/icon_warning_red.png" />
        </custom>
      </element>
        
      <element type="image" rect="relative: 31, 1, 33, 3" tooltip="Something's not right">
        <attributes>
          <attribute key="UseAlphaChannel" value="true" />
          <attribute key="ScaleImage" value="true" />
          <attribute key="Name" value="warning_yellow" />
        </attributes>
        <custom>
          <attribute key="src" value="file://data/images/icon_warning_yellow.png" />
        </custom>
      </element>
    </children>
  </element>
</dialog>