<dialog>
  <element type="MenuBackground" rect="center: -25, -17, 25, 18">
    <children>
      <element type="staticText" rect="relative: 0, 1, 40, 3" font="big">
        <attributes>
          <attribute key="Caption" value="Dustbin::Games MarbleGP - Setup Game" />
          <attribute key="HTextAlign" value="center" />
          <attribute key="VTextAlign" value="center" />
          <attribute key="Name" value="label_headline" />
        </attributes>
        
        <children>
          
        </children>
      </element>
      
      <!-- Player 1 -->
      <element type="MenuBackground" rect="relative: 1, 4, 49, 8">
        <attributes>
          <attribute key="Name" value="player1" />
          <attribute key="OverrideColor" value="0, 0, 0, 0" />
        </attributes>
        
        <children>
          <include file="data/menu/dialog_playerlist.xml" />
        </children>
      </element>
      
      <element type="MenuBackground" rect="relative: 1, 9, 49, 30">
        <children>
          <element type="staticText" rect="relative: 24, 1, 35, 3" tooltip="Network Game">
            <attributes>
              <attribute key="Caption" value="Network Game:" />
              <attribute key="HTextAlign" value="lowerRight" />
              <attribute key="VTextAlign" value="center" />
            </attributes>
          </element>
          
          <element type="Selector" rect="relative: 36, 1, 47, 3">
            <attributes>
              <attribute key="Name" value="network_game" />
              <attribute key="Selected" value="0" />
            </attributes>
            <custom>
              <attribute key="options" value="None;Start Server;Join Server" />
            </custom>
          </element>
          
          <element type="staticText" rect="relative: 26, 12, 35, 14" tooltip="Select the class of the AI marbles, i.e. how fast the AI Marbles are">
            <attributes>
              <attribute key="Caption" value="Ai Class:" />
              <attribute key="HTextAlign" value="lowerRight" />
              <attribute key="VTextAlign" value="center" />
            </attributes>
          </element>
          
          <element type="Selector" rect="relative: 36, 12, 47, 14">
            <attributes>
              <attribute key="Name" value="raceclass" />
              <attribute key="Selected" value="0" />
            </attributes>
            <custom>
              <attribute key="options" value="MarbleGP;Marbles2;Marbles3;Random" />
            </custom>
          </element>
          
          <element type="staticText" rect="relative: 24, 4, 35, 6" tooltip="Select the starting Order of the Races">
            <attributes>
              <attribute key="Caption" value="Grid Positions:" />
              <attribute key="HTextAlign" value="lowerRight" />
              <attribute key="VTextAlign" value="center" />
            </attributes>
          </element>          
          
          <element type="Selector" rect="relative: 36, 4, 47, 6">
            <attributes>
              <attribute key="Name" value="starting_positions" />
              <attribute key="Selected" value="0" />
            </attributes>
            <custom>
              <attribute key="options" value="Fixed;Last race;Standings;Random" />
            </custom>
          </element>
          
          <element type="staticText" rect="relative: 1, 1, 20, 3" tooltip="Reverse Starting Positions">
            <attributes>
              <attribute key="Caption" value="Reverse Grid:" />
              <attribute key="HTextAlign" value="lowerRight" />
              <attribute key="VTextAlign" value="center" />
            </attributes>
          </element>          
          
          <element type="DustbinCheckbox" rect="relative: 21, 1, 23, 3">
            <attributes>
              <attribute key="Name" value="reverse_grid" />
            </attributes>
          </element>
                    
          <element type="staticText" rect="relative: 1, 4, 20, 6" tooltip="Randomize Starting Positions of the First Race">
            <attributes>
              <attribute key="Caption" value="Shuffle First Race:" />
              <attribute key="HTextAlign" value="lowerRight" />
              <attribute key="VTextAlign" value="center" />
            </attributes>
          </element>          
          
          <element type="DustbinCheckbox" rect="relative: 21, 4, 23, 6">
            <attributes>
              <attribute key="Name" value="randomize_first" />
            </attributes>
          </element>
          
          <element type="staticText" rect="relative: 1, 9, 20, 11" tooltip="Fill the Grid with AI Marbles">
            <attributes>
              <attribute key="Caption" value="Add AI Players:" />
              <attribute key="HTextAlign" value="lowerRight" />
              <attribute key="VTextAlign" value="center" />
            </attributes>
          </element>          
          
          <element type="DustbinCheckbox" rect="relative: 21, 9, 23, 11">
            <attributes>
              <attribute key="Name" value="fillgrid_ai" />
            </attributes>
          </element>
          
          <element type="staticText" rect="relative: 26, 9, 35, 11" tooltip="Select the Grid Size">
            <attributes>
              <attribute key="Caption" value="Grid Size:" />
              <attribute key="HTextAlign" value="lowerRight" />
              <attribute key="VTextAlign" value="center" />
            </attributes>
          </element>          
          
          <element type="Selector" rect="relative: 36, 9, 47, 11">
            <attributes>
              <attribute key="Name" value="gridsize" />
              <attribute key="Selected" value="3" />
            </attributes>
            <custom>
              <attribute key="options" value="2;4;8;12;16" />
            </custom>
          </element>
          
          <element type="staticText" rect="relative: 0, 18, 20, 20" tooltip="When do you want the race to end?">
            <attributes>
              <attribute key="Caption" value="Race Auto Finish:" />
              <attribute key="HTextAlign" value="lowerRight" />
              <attribute key="VTextAlign" value="center" />
            </attributes>
          </element> 
          
          <element type="Selector" rect="relative: 21, 18, 47, 20">
            <attributes>
              <attribute key="Name" value="race_finish" />
              <attribute key="Selected" value="0" />
            </attributes>
            <custom>
              <attribute key="options" value="All Players finished;Second to Last finished;First Player finished;All Players and AI finished" />
            </custom>
          </element>
          
        </children>
      </element>
    </children>
  </element>  
  
  <include file="data/menu/button_ok.xml" />
  <include file="data/menu/button_cancel.xml" />
  
  <element type="tab" rect="fillwindow">
    <attributes>
      <attribute key="DrawBackground" value="true" />
      <attribute key="BackColor" value="96, 200, 200, 200" />
      <attribute key="Visible" value="false" />
      <attribute key="Name" value="selectctrl_dialog" />
    </attributes>
    
    <children>
      <element type="MenuBackground" rect="center: -20, -6, 20 , 9">
        <attributes>
          <attribute key="UseOverrideColor" value="true" />
          <attribute key="OverrideColor" value="230, 239, 239, 255" />
          <attribute key="ZLayer" value="94" />
        </attributes>
        
        <children>
          <element type="staticText" rect="center: -19, -6, 19, -2" font="big">
            <attributes>
              <attribute key="Caption" value="Select Controller" />
              <attribute key="HTextAlign" value="center" />
              <attribute key="VTextAlign" value="center" />
            </attributes>
          </element>
          
          <element type="staticText" rect="center: -22, -1, 22, 3">
            <attributes>
              <attribute key="Caption" value="DummyText" />
              <attribute key="Name" value="selectctrl_player" />
              <attribute key="HTextAlign" value="center" />
              <attribute key="VTextAlign" value="center" />
            </attributes>
          </element>
          
          <element type="MenuButton" rect="center: 0, 4, 4, 8" tooltip="Cancel Gamepad Assignment">
            <attributes>
              <attribute key="Name" value="CancelAssignJoystick" />
              <attribute key="Id" value="30001" />
              <attribute key="ImagePath" value="data/images/btn_cancel.png" />
            </attributes>
            <custom>
              <attribute key="Cancel" value="true" />
            </custom>
          </element>
        </children>
      </element>
    </children>
  </element>  
  
  <include file="data/menu/dialog_select_player.xml" />
</dialog>