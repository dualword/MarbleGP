<dialog>
  <element type="MenuButton" rect="relative: 1, 1, 5, 5" tooltip="Add Player">
    <attributes>
      <attribute key="ImagePath" value="data/images/btn_add.png" />
      <attribute key="Visible" value="false" />
      <attribute key="Name" value="btn_add" />
    </attributes>
  </element>
  
  <element type="tab" rect="relative: 0, 0, 48, 7">
    <attributes>
      <attribute key="Visible" value="true" />
      <attribute key="Name" value="tab" />
    </attributes>
    
    <children>
      <element type="editBox" rect="relative: 2, 1, 44, 3">
        <attributes>
          <attribute key="Name" value="edit_name" />
          <attribute key="Caption" value="Player" />
          <attribute key="Visible" value="true" />
          <attribute key="HTextAlign" value="upperLeft" />
          <attribute key="VTextAlign" value="center" />
        </attributes>
      </element>
      
      <element type="MenuButton" rect="relative: 41, 4, 44, 7" tooltip="Remove Player Profile">
        <attributes>
          <attribute key="Name" value="btn_delete" />
          <attribute key="ImagePath" value="data/images/btn_cancel.png" />
        </attributes>
      </element>
      
      <element type="MenuButton" rect="relative: 7, 4, 10, 7" tooltip="Edit Controls">
        <attributes>
          <attribute key="Name" value="btn_controls" />
          <attribute key="ImagePath" value="data/images/btn_gamepad.png" />
        </attributes>
      </element>
      
      <element type="MenuButton" rect="relative: 2, 4, 5, 7" tooltip="Edit Texture">
        <attributes>
          <attribute key="Name" value="btn_texture" />
          <attribute key="ImagePath" value="data/images/btn_texture.png" />
        </attributes>
      </element>
      
      <element type="image" rect="relative: 45, 1, 47, 3" tooltip="Something's wrong">
        <attributes>
          <attribute key="UseAlphaChannel" value="true" />
          <attribute key="ScaleImage" value="true" />
          <attribute key="Name" value="warning_red" />
          <attribute key="Visible" value="true" />
        </attributes>
        <custom>
          <attribute key="src" value="file://data/images/icon_warning_red.png" />
        </custom>
      </element>
        
      <element type="image" rect="relative: 15, 1, 17, 3" tooltip="Something's not right">
        <attributes>
          <attribute key="UseAlphaChannel" value="true" />
          <attribute key="ScaleImage" value="true" />
          <attribute key="Name" value="warning_yellow" />
          <attribute key="Visible" value="false" />
        </attributes>
        <custom>
          <attribute key="src" value="file://data/images/icon_warning_yellow.png" />
        </custom>
      </element>
    </children>
  </element>
</dialog>