<dialog>
  <element type="tab" rect="fillwindow">
    <attributes>
      <attribute key="Name" value="EditProfile_AiHelp" />
      <attribute key="Visible" value="false" />
    </attributes>
    
    <children>
      <element type="staticText" rect="relative: 0, 5, 50, 7" font="big">
        <attributes>
          <attribute key="Caption" value="AI Help Level" />
          <attribute key="HTextAlign" value="center" />
          <attribute key="VTextAlign" value="center" />
        </attributes>
      </element>
      
      <element type="staticText" rect="relative: 5, 8, 45, 11">
        <attributes>
          <attribute key="Caption" value="Select the level of AI help you want to use. This ranges from no help at all (Off) to MarbleGP Bot." />
          <attribute key="HTextAlign" value="center" />
          <attribute key="VTextAlign" value="center" />
        </attributes>
      </element>
      
      <element type="staticText" rect="relative: 1, 16, 10, 19">
        <attributes>
          <attribute key="Caption" value="AI Help:" />
          <attribute key="HTextAlign" value="lowerRight" />
          <attribute key="VTextAlign" value="center" />
        </attributes>
      </element>
      
      <element type="Selector" rect="relative: 11, 16, 36, 19">
        <attributes>
          <attribute key="Name" value="EditProfile_AiHelp" />
        </attributes>
        <custom>
          <attribute key="options" value="Off;Display;Low;Medium;High;AI Bot (MarbleGP);AI Bot (Marble2);AI Bot (Marble3)" />
        </custom>
      </element>
      
      <element type="staticText" rect="relative: 11, 21, 36, 28">
        <attributes>
          <attribute key="Name" value="EditProfile_AiHelpInfo0" /
          <attribute key="Caption" value="AI Help Off: AI Help is turned off, you are on your own." />
          <attribute key="Visible" value="false" />
        </attributes>
      </element>
      
      <element type="staticText" rect="relative: 11, 21, 36, 28">
        <attributes>
          <attribute key="Name" value="EditProfile_AiHelpInfo1" /
          <attribute key="Caption" value="AI Help Display: The AI help shows you what it would do using icons above the speed meter." />
          <attribute key="Visible" value="false" />
        </attributes>
      </element>
      
      <element type="staticText" rect="relative: 11, 21, 36, 28">
        <attributes>
          <attribute key="Name" value="EditProfile_AiHelpInfo2" /
          <attribute key="Caption" value="AI Help Low: When approaching a jump the AI takes over throttle control for you. Very helpful if you explore a new track." />
          <attribute key="Visible" value="false" />
        </attributes>
      </element>
      
      <element type="staticText" rect="relative: 11, 21, 36, 28">
        <attributes>
          <attribute key="Name" value="EditProfile_AiHelpInfo3" /
          <attribute key="Caption" value="AI Help Medium: Speed control is done by the AI so you don't fall off the track easily, though it's not guaranteed to stay on." />
          <attribute key="Visible" value="false" />
        </attributes>
      </element>
      
      <element type="staticText" rect="relative: 11, 21, 36, 28">
        <attributes>
          <attribute key="Name" value="EditProfile_AiHelpInfo4" /
          <attribute key="Caption" value="AI Help High: The AI controls your speed, and when approaching a jump it takes complete control of your marble." />
          <attribute key="Visible" value="false" />
        </attributes>
      </element>
      
      <element type="staticText" rect="relative: 11, 21, 36, 28">
        <attributes>
          <attribute key="Name" value="EditProfile_AiHelpInfo5" /
          <attribute key="Caption" value="AI Bot MarbleGP: your marble is completely controlled by the AI on the level of a MarbleGP Bot." />
          <attribute key="Visible" value="false" />
        </attributes>
      </element>
      
      <element type="staticText" rect="relative: 11, 21, 36, 28">
        <attributes>
          <attribute key="Name" value="EditProfile_AiHelpInfo6" /
          <attribute key="Caption" value="AI Bot MarbleGP: your marble is completely controlled by the AI on the level of a Marble2 Bot." />
          <attribute key="Visible" value="false" />
        </attributes>
      </element>
      
      <element type="staticText" rect="relative: 11, 21, 36, 28">
        <attributes>
          <attribute key="Name" value="EditProfile_AiHelpInfo7" /
          <attribute key="Caption" value="AI Bot MarbleGP: your marble is completely controlled by the AI on the level of a Marble3 Bot." />
          <attribute key="Visible" value="false" />
        </attributes>
      </element>
    </children>
  </element>
</dialog>