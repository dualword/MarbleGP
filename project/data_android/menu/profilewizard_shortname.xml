<dialog>
  <element type="MenuBackground" rect="center: -25, -17, 25, 18">
    
    <children>
      <element type="staticText" rect="relative: 0, 1, 50, 4" font="huge">
        <attributes>
          <attribute key="Caption" value="Profile Wizard 2 / 5" />
          <attribute key="HTextAlign" value="center" />
          <attribute key="VTextAlign" value="center" />
          <attribute key="Name" value="label_headline" />
        </attributes>
      </element>
      
      <element type="staticText" rect="relative: 1, 5, 49, 7" font="default">
        <attributes>
          <attribute key="Caption" value="Profile Wizard Step 2 / 5. Use the input file below to define the short name of the selected player" />
          <attribute key="HTextAlign" value="center" />
        </attributes>
      </element>
      
      <element type="staticText" rect="relative: 1, 15, 14, 18">
        <attributes>
          <attribute key="Caption" value="Short Name:" />
          <attribute key="HTextAlign" value="lowerRight" />
          <attribute key="VTextAlign" value="center" />
        </attributes>
      </element>
      
      <element type="editBox" rect="relative: 16, 15, 32, 18" font="huge">
        <attributes>
          <attribute key="MaxChars" value="5" />
          <attribute key="Name" value="shortname" />
        </attributes>
      </element>
      
       <element type="MenuButton" rect="relative: 33, 15, 36, 18" tooltip="Clear Name">
        <attributes>
          <attribute key="Name" value="clear_name" />
          <attribute key="ImagePath" value="data/images/btn_cancel.png" />
        </attributes>
      </element>
      
      <element type="image" rect="relative: 1, 15, 4, 18" tooltip="The short name must at least be 2 characters long.">
        <attributes>
          <attribute key="Name" value="warning" />
          <attribute key="UseAlphaChannel" value="true" />
          <attribute key="ScaleImage" value="true" />
        </attributes>
      </element>
      
      <element type="staticText" rect="relative: 3, 23, 49, 40">
        <attributes>
          <attribute key="Caption" value="The abbreviation of the profile name is used to indicate the position of the player during a race. You can see it in the ranking list on the upper left of the screen." />
        </attributes>
      </element>
    </children>
  </element>
  
  <include file="data/menu/buttons_wizard.xml" />
</dialog>