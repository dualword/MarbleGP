<dialog>
  <element type="tab" rect="relative: 0, 0, 50, 3">
    <attributes>
      <attribute key="Name" value="player_tab" />
      <attribute key="Visible" value="true" />
    </attributes>
    
    <children>
      <element type="staticText" rect="relative: 0, 0, 4, 2" font="regular" tooltip="The position in the starting grid">
        <attributes>
          <attribute key="Caption" value="1" />
          <attribute key="HTextAlign" value="center" />
          <attribute key="VTextAlign" value="center" />
          <attribute key="Name" value="player_label" />
        </attributes>
      </element>
      
      <element type="staticText" rect="relative: 17, 0, 19, 2" font="small">
        <attributes>
          <attribute key="Name" value="starting_number" />
          <attribute key="VTextAlign" value="center" />
          <attribute key="HTextAlign" value="center" />
          <attribute key="Caption" value="66" />
        </attributes>
      </element>
      
      <element type="image" rect="relative: 20, 0, 22, 2" font="small" tooltip="AI Class of the player (if it's a computer controlled marble)">
        <attributes>
          <attribute key="Name" value="ai_class" />
          <attribute key="ScaleImage" value="true" />
          <attribute key="UseAlphaChannel" value="true" />
        </attributes>
        <custom>
          <attribute key="src" value="file://data/images/bot_marblegp.png" />
        </custom>
      </element>
      
      <element type="staticText" rect="relative: 5, 0, 16, 2" font="regular" tooltip="The name of the player">
        <attributes>
          <attribute key="Name" value="player_name" />
          <attribute key="Caption" value="Mr. Nukular" />
          <attribute key="VTextAlign" value="center" />
        </attributes>
      </element>
    </children>
  </element>
</dialog>