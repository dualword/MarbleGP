<dialog>
  <element type="MenuBackground" rect="center: -25, -17, 25, 18">
    
    <children>
      <element type="staticText" rect="relative: 0, 1, 50, 4" font="huge">
        <attributes>
          <attribute key="Caption" value="MarbleGP - Profile Wizard 5 / 5" />
          <attribute key="HTextAlign" value="center" />
          <attribute key="VTextAlign" value="center" />
          <attribute key="Name" value="label_headline" />
          <attribute key="Name" value="label_headline" />
        </attributes>
      </element>
      
      <element type="staticText" rect="relative: 1, 5, 49, 7" font="default">
        <attributes>
          <attribute key="Caption" value="Profile Wizard Step 5 / 5. Define a texture for your marble." />
          <attribute key="HTextAlign" value="center" />
        </attributes>
      </element>
      
      <element type="tab" rect="relative: 1, 8, 22, 28">
        <attributes>
          <attribute key="BackColor" value="200, 0, 0, 0" />
          <attribute key="DrawBackground" value="true" /> 
        </attributes>
      </element>
      
      <element type="image" rect="relative: 2, 9, 21, 27" tooltip="Preview of your marble's texture">
        <attributes>
          <attribute key="ScaleImage" value="true" />
          <attribute key="Name" value="texture_image" />
        </attributes>
        <custom>
          <attribute key="src" value="file://data/textures/texture_marblemann.png" />
        </custom>
      </element>
      
      <element type="staticText" rect="relative: 23, 8, 32, 10" tooltip="Select the mode of your marble's texture">
        <attributes>
          <attribute key="Caption" value="Texture Mode:" />
          <attribute key="HTextAlign" value="lowerRight" />
          <attribute key="VTextAlign" value="center" />
          <attribute key="Name" value="label_texture_mode" />
        </attributes>
      </element>
      
      <element type="Selector" rect="relative: 33, 8, 48, 10" tooltip="Select the mode of your marble's texture">
        <attributes>
          <attribute key="Name" value="texture_mode" />
          <attribute key="Selected" value="0" />
        </attributes>
        <custom>
          <attribute key="options" value="Default;Generated" />
        </custom>
      </element>
      
      <element type="MenuButton" rect="relative: 40, 12, 48, 14" tooltip="Edit Texture Parameters">
        <attributes>
          <attribute key="Name" value="btn_texture_params" />
          <attribute key="Caption" value="..." />
        </attributes>
      </element>
      
      <element type="MenuButton" rect="relative: 45, 4, 48, 7" tooltip="Generate randome Texture">
        <attributes>
          <attribute key="Name" value="btn_random_texture" />
          <attribute key="ImagePath" value="data/images/btn_regenerate.png" />
        </attributes>
      </element>
    </children>
  </element>
  
  <include file="data/menu/buttons_wizard.xml" />
  <include file="data/menu/dialog_textureparams.xml" />
  <include file="data/menu/dialog_select_pattern.xml" />
  <include file="data/menu/dialog_color.xml" />
</dialog>