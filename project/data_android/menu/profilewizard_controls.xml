<dialog>
  <element type="MenuBackground" rect="center: -25, -17, 25, 18">
    
    <children>
      <element type="staticText" rect="relative: 0, 1, 50, 4" font="huge">
        <attributes>
          <attribute key="Caption" value="MarbleGP - Profile Wizard 4 / 5" />
          <attribute key="HTextAlign" value="center" />
          <attribute key="VTextAlign" value="center" />
          <attribute key="Name" value="label_headline" />
        </attributes>
      </element>
      
      <element type="staticText" rect="relative: 1, 5, 49, 7" font="default">
        <attributes>
          <attribute key="Caption" value="Profile Wizard Step 4 / 5. Customize the controls of your marble." />
          <attribute key="HTextAlign" value="center" />
        </attributes>
      </element>
      
      <element type="staticText" rect="relative: 7, 7, 13, 9" font="default" tooltip="Select the controller you want to use">
        <attributes>
          <attribute key="Caption" value="Controller:" />
          <attribute key="HTextAlign" value="lowerRight" />
          <attribute key="VTextAlign" value="center" />
          <attribute key="Name" value="label_controller_type" />
        </attributes>
      </element>
      
      <element type="Selector" rect="relative: 14, 7, 31, 9" font="huge" tooltip="Select the controller you want to use">
        <attributes>
          <attribute key="Name" value="controller_type" />
          <attribute key="Selected" value="0" />
        </attributes>
        <custom>
          <attribute key="options" value="" />
        </custom>
      </element>
      
      <element type="DustbinCheckbox" rect="relative: 41, 7, 43, 9" tooltip="If this box is checked the controller will always apply full acceleration unless you hit the brake">
        <attributes>
          <attribute key="Name" value="auto_throttle" />
        </attributes>
      </element>

      <element type="staticText" rect="relative: 32, 7, 40, 9" font="default" tooltip="If this box is checked the controller will always apply full acceleration unless you hit the brake">
        <attributes>
          <attribute key="Caption" value="Auto Throttle:" />
          <attribute key="VTextAlign" value="center" />
          <attribute key="Name" value="label_auto_throttle" />
        </attributes>
      </element>
      
      <element type="image" rect="relative: 7, 10, 43, 29" font="huge" tooltip="Selected Controller">
        <attributes>
          <attribute key="Name" value="controller_img" />
          <attribute key="Visible" value="false" />
          <attribute key="ScaleImage" value="true" />
        </attributes>
      </element>
      
      <element type="ControllerUiGame" rect="relative: 7, 10, 43, 29" font="small">
        <attributes>
          <attribute key="Name" value="controller_ui" />
          <attribute key="UseOverrideColor" value="true" />
          <attribute key="OverrideColor" value="128, 232, 232, 232" />
          <attribute key="headline" value="Game Controller Setup" />
        </attributes>
      </element>
      
      <element type="MenuButton" rect="relative: 38, 24, 42, 28" tooltip="Edit Controls">
        <attributes>
          <attribute key="Name" value="editGameCtrl" />
          <attribute key="ImagePath" value="data/images/btn_edit_profile.png" />
        </attributes>
      </element>

      <element type="MenuButton" rect="relative: 38, 19, 42, 23" tooltip="Test Controls">
        <attributes>
          <attribute key="Name" value="testGameCtrl" />
          <attribute key="ImagePath" value="data/images/btn_testcontrols.png" />
        </attributes>
      </element>
    </children>
  </element>
  
  <include file="data/menu/buttons_wizard.xml" />
</dialog>