{
  "includes": {
    "irr::gui::IGUIElement *"   : "irrlicht.h",
    "irr::gui::IGUIStaticText *": "irrlicht.h",
    "std::vector"               : "vector"
  },
  "classes": { },
  "tables": {
    "SVector3d": {
      "comment": "3d vector",
      "fields": [
        { "name": "x", "type": "float" },
        { "name": "y", "type": "float" },
        { "name": "z", "type": "float" }
      ],
      "prefix": "const ",
      "postfix": "&"
    },
    "SColor": {
      "comment": "RGBA color information",
      "fields": [
        { "name": "r", "type": "int" },
        { "name": "g", "type": "int" },
        { "name": "b", "type": "int" },
        { "name": "a", "type": "int" }
      ]
    },
    "SSettings": {
      "comment": "This struct holds all game settings",
      "fields": [
        { "name": "gfx_resolution_w", "type": "int"          },
        { "name": "gfx_resolution_h", "type": "int"          },
        { "name": "gfx_fullscreen"  , "type": "bool"         },
        { "name": "gfx_shadows"     , "type": "int"          },
        { "name": "gfx_ambientlight", "type": "int"          },
        { "name": "ingame_rearview" , "type": "bool"         },
        { "name": "ingame_ranking"  , "type": "bool"         },
        { "name": "ingame_racetime" , "type": "bool"         },
        { "name": "ingame_laptimes" , "type": "bool"         },
        { "name": "sfx_master"      , "type": "float"        },
        { "name": "sfx_soundtrack"  , "type": "float"        },
        { "name": "sfx_menu"        , "type": "float"        },
        { "name": "sfx_game"        , "type": "float"        },
        { "name": "misc_usemenuctrl", "type": "bool"         },
        { "name": "misc_menuctrl"   , "type": "std::string"  }
      ]
    },
    "STrack": {
      "comment": "A table for the track data",
      "fields": [
        { "name": "name"    , "type": "std::string" },
        { "name": "folder"  , "type": "std::string" },
        { "name": "position", "type": "int"         }
      ]
    },
    "SPlayerRank": {
      "comment": "This table holds all data for the championship of a player",
      "fields": [
        { "name": "name"     , "type": "std::string"      },
        { "name": "points"   , "type": "int"              },
        { "name": "positions", "type": "std::vector<int>" },
        { "name": "respawn"  , "type": "int"              },
        { "name": "stunned"  , "type": "int"              },
        { "name": "dnf"      , "type": "int"              },
        { "name": "firstrace", "type": "int"              }
      ]
    },
    "SPlayerResult": {
      "comment": "Data structure for the players' results in a race",
      "fields": [
        { "name": "player" , "type": "std::string" },
        { "name": "laps"   , "type": "int"         },
        { "name": "time"   , "type": "int"         },
        { "name": "respawn", "type": "int"         },
        { "name": "stunned", "type": "int"         }
      ]
    },
    "SRace": {
      "comment": "This table holds all data necessary to define a race",
      "fields": [
        { "name": "track" , "type": "std::string"                },
        { "name": "laps"  , "type": "int"                        },
        { "name": "result", "type": "std::vector<SPlayerResult>" }
      ]
    },
    "SChampionShip": {
      "comment": "A data structure that holds all data of a championship",
      "fields": [
        { "name": "class"  , "type": "std::string"              },
        { "name": "players", "type": "std::vector<SPlayerRank>" },
        { "name": "races"  , "type": "std::vector<SRace>"       }
      ]
    }
  }
}
