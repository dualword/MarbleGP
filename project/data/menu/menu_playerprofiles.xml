<dialog>
  <element type="MenuButton" rect="relative: 1, 1, 5, 5" tooltip="Add Player">
    <attributes>
      <attribute key="ImagePath" value="data/images/btn_add.png" />
      <attribute key="Visible" value="false" />
      <attribute key="Name" value="btn_add" />
    </attributes>
  </element>
  
  <element type="tab" rect="relative: 0, 0, 35, 8">
    <attributes>
      <attribute key="Visible" value="true" />
      <attribute key="Name" value="tab" />
    </attributes>
    
    <children>
      <element type="editBox" rect="relative: 2, 1, 20, 3">
        <attributes>
          <attribute key="Name" value="edit_name" />
          <attribute key="Caption" value="Player" />
          <attribute key="Visible" value="true" />
          <attribute key="HTextAlign" value="upperLeft" />
          <attribute key="VTextAlign" value="center" />
        </attributes>
      </element>
      
      <element type="staticText" rect="relative: 20, 1, 26, 3" font="small">
        <attributes>
          <attribute key="Caption" value="Short Name: " />
          <attribute key="HTextAlign" value="lowerRight" />
          <attribute key="VTextAlign" value="center" />
        </attributes>
      </element>
      
      <element type="editBox" rect="relative: 26, 1, 33, 3">
        <attributes>
          <attribute key="Name" value="edit_abbreviation" />
          <attribute key="MaxChars" value="5" />
        </attributes>
      </element>
      
      <element type="MenuButton" rect="relative: 31, 4, 34, 7" tooltip="Remove Player Profile">
        <attributes>
          <attribute key="Name" value="btn_delete" />
          <attribute key="ImagePath" value="data/images/btn_cancel.png" />
        </attributes>
      </element>
      
      <element type="MenuButton" rect="relative: 26, 4, 29, 7" tooltip="Edit Profile">
        <attributes>
          <attribute key="Name" value="btn_edit_profile" />
          <attribute key="ImagePath" value="data/images/btn_edit_profile.png" />
        </attributes>
      </element>
      
      <element type="staticText" rect="relative: 2, 4, 8, 6" font="small">
        <attributes>
          <attribute key="Caption" value="Controls:" />
        </attributes>
      </element>
      
      <element type="staticText" rect="relative: 7, 4, 20, 6" font="small" tooltip="The controller type of the marble">
        <attributes>
          <attribute key="Name" value="label_controls" />
          <attribute key="Caption" value="Keyboard" />
          <attribute key="WordWrap" value="false" />
        </attributes>
      </element>
      
      <element type="staticText" rect="relative: 2, 5, 8, 7" font="small">
        <attributes>
          <attribute key="Caption" value="Texture:" />
        </attributes>
      </element>
      
      <element type="staticText" rect="relative: 7, 5, 20, 7" font="small" tooltip="The texture type of the marble">
        <attributes>
          <attribute key="Name" value="label_texture" />
          <attribute key="Caption" value="Default" />
        </attributes>
      </element>
      
      <element type="staticText" rect="relative: 2, 6, 8, 8" font="small">
        <attributes>
          <attribute key="Caption" value="AI Help:" />
        </attributes>
      </element>
      
      <element type="staticText" rect="relative: 7, 6, 20, 8" font="small" tooltip="AI help level">
        <attributes>
          <attribute key="Name" value="label_aihelp" />
          <attribute key="Caption" value="Off" />
        </attributes>
      </element>
    </children>
  </element>
</dialog>