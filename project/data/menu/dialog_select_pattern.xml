<dialog>
  <element type="tab" rect="fillwindow">
    <attributes>
      <attribute key="DrawBackground" value="true" />
      <attribute key="BackColor" value="96, 200, 200, 200" />
      <attribute key="Name" value="pattern_dialog" />
      <attribute key="Visible" value="false" />
    </attributes>
    
    <children>
      <element type="MenuBackground" rect="center: -22, -15, 21, 19">
        <attributes>
          <attribute key="UseOverrideColor" value="true" />
          <attribute key="OverrideColor" value="232, 239, 239, 255" />
          <attribute key="ZLayer" value="46" />
        </attributes>
        
        <children>
          <element type="staticText" rect="relative: 0, 0, 40, 3" font="big">
            <attributes>
              <attribute key="Caption" value="Choose your texture pattern" />
              <attribute key="Name" value="texture_headline" />
              <attribute key="HTextAlign" value="center" />
              <attribute key="VTextAlign" value="center" />
            </attributes>
          </element>
          
          <element type="DustbinImageList" rect="relative: 2, 5, 41, 28" font="small">
            <attributes>
              <attribute key="Name" value="PatternList" />
              <attribute key="Rows" value="3" />
              <attribute key="EventOnChange" value="true" />
            </attributes>
            
            <custom>
              <attribute key="rect" value="0.0, 0.0, 0.25, 0.5" />
            </custom>
          </element>
          
          <element type="MenuButton" rect="center: -2, 14, 2, 18" tooltip="Close Dialog">
            <attributes>
              <attribute key="Name" value="btn_pattern_close" />
              <attribute key="ImagePath" value="data/images/btn_cancel.png" />
            </attributes>
          </element>
        </children>
      </element>
    </children>
  </element>
</dialog>