<dialog>
  <element type="MenuBackground" rect="center: -40, -25, 40, 25">
    
    <children>
      <element type="staticText" rect="relative: 0, 1, 80, 4" font="huge">
        <attributes>
          <attribute key="Caption" value="MarbleGP - Profile Wizard 4 / 5" />
          <attribute key="HTextAlign" value="center" />
          <attribute key="VTextAlign" value="center" />
          <attribute key="Name" value="label_headline" />
        </attributes>
      </element>
      
      <element type="staticText" rect="relative: 1, 5, 79, 7" font="default">
        <attributes>
          <attribute key="Caption" value="Profile Wizard Step 4 / 5. Customize the controls of your marble." />
          <attribute key="HTextAlign" value="center" />
        </attributes>
      </element>
      
      <element type="staticText" rect="relative: 20, 7, 32, 9" font="default">
        <attributes>
          <attribute key="Caption" value="Controller Type:" />
          <attribute key="VTextAlign" value="center" />
        </attributes>
      </element>
      
      <element type="Selector" rect="relative: 33, 7, 59, 9" font="default">
        <attributes>
          <attribute key="Name" value="controller_type" />
        </attributes>
        
        <custom>
          <attribute key="options" value="Keyboard;Gamepad" />
        </custom>
      </element>
      
      <element type="DustbinCheckbox" rect="relative: 33, 10, 35, 12" tooltip="If this box is checked the controller will always apply full acceleration unless you hit the brake">
        <attributes>
          <attribute key="Name" value="auto_throttle" />
        </attributes>
      </element>

      <element type="staticText" rect="relative: 20, 10, 32, 12" font="default" tooltip="If this box is checked the controller will always apply full acceleration unless you hit the brake">
        <attributes>
          <attribute key="Caption" value="Auto Throttle:" />
          <attribute key="VTextAlign" value="center" />
        </attributes>
      </element>
      
      <element type="ControllerUiGame" rect="relative: 20, 13, 59, 41" font="small">
        <attributes>
          <attribute key="Name" value="controller_ui" />
          <attribute key="UseOverrideColor" value="true" />
          <attribute key="OverrideColor" value="128, 232, 232, 232" />
          <attribute key="headline" value="Game Controller Setup" />
        </attributes>
      </element>

      <element type="MenuButton" rect="relative: 51, 36, 54, 39" tooltip="Edit Controls">
        <attributes>
          <attribute key="Name" value="editGameCtrl" />
          <attribute key="ImagePath" value="data/images/btn_edit_profile.png" />
        </attributes>
      </element>

      <element type="MenuButton" rect="relative: 55, 36, 58, 39" tooltip="Test Controls">
        <attributes>
          <attribute key="Name" value="testGameCtrl" />
          <attribute key="ImagePath" value="data/images/btn_testcontrols.png" />
        </attributes>
      </element>
    </children>
  </element>
  
  <include file="data/menu/buttons_wizard.xml" />
</dialog>