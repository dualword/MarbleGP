      <element type="MenuBackground" rect="relative: 42, 6, 77, 45">
        <children>
          <element type="staticText" rect="relative: 0, 0, 35, 3" font="big">
            <attributes>
              <attribute key="Caption" value="Game Options" />
              <attribute key="HTextAlign" value="center" />
              <attribute key="VTextAlign" value="center" />
            </attributes>
          </element>
          
          <element type="staticText" rect="relative: 5, 3, 17, 7" tooltip="Select the Raceclass, i.e. how fast the Marbles are">
            <attributes>
              <attribute key="Caption" value="Race Class:" />
              <attribute key="HTextAlign" value="lowerRight" />
              <attribute key="VTextAlign" value="center" />
            </attributes>
          </element>
          
          <element type="Selector" rect="relative: 18, 4, 33, 6">
            <attributes>
              <attribute key="Name" value="raceclass" />
              <attribute key="Selected" value="0" />
            </attributes>
            <custom>
              <attribute key="options" value="Marbles3;Marbles2;MarbleGP" />
            </custom>
          </element>
          
          <element type="staticText" rect="relative: 5, 7, 17, 11" tooltip="Select the starting Order of the Races">
            <attributes>
              <attribute key="Caption" value="Grid Positions:" />
              <attribute key="HTextAlign" value="lowerRight" />
              <attribute key="VTextAlign" value="center" />
            </attributes>
          </element>          
          
          <element type="Selector" rect="relative: 18, 8, 33, 10">
            <attributes>
              <attribute key="Name" value="starting_positions" />
              <attribute key="Selected" value="0" />
            </attributes>
            <custom>
              <attribute key="options" value="Fixed;Last race;Standings;Random" />
            </custom>
          </element>
          
          <element type="staticText" rect="relative: 0, 11, 17, 15" tooltip="Reverse Starting Positions">
            <attributes>
              <attribute key="Caption" value="Reverse Grid:" />
              <attribute key="HTextAlign" value="lowerRight" />
              <attribute key="VTextAlign" value="center" />
            </attributes>
          </element>          
          
          <element type="DustbinCheckbox" rect="relative: 18, 12, 20, 14">
            <attributes>
              <attribute key="Name" value="reverse_grid" />
            </attributes>
          </element>
                    
          <element type="staticText" rect="relative: 0, 15, 17, 19" tooltip="Randomize Starting Positions of the First Race">
            <attributes>
              <attribute key="Caption" value="Randomize First Race:" />
              <attribute key="HTextAlign" value="lowerRight" />
              <attribute key="VTextAlign" value="center" />
            </attributes>
          </element>          
          
          <element type="DustbinCheckbox" rect="relative: 18, 16, 20, 18">
            <attributes>
              <attribute key="Name" value="randomize_first" />
            </attributes>
          </element>
          
          <element type="staticText" rect="relative: 0, 19, 17, 23" tooltip="Fill the Grid with AI Marbles">
            <attributes>
              <attribute key="Caption" value="Fill Grid with AI Players:" />
              <attribute key="HTextAlign" value="lowerRight" />
              <attribute key="VTextAlign" value="center" />
            </attributes>
          </element>          
          
          <element type="DustbinCheckbox" rect="relative: 18, 20, 20, 22">
            <attributes>
              <attribute key="Name" value="fillgrid_ai" />
            </attributes>
          </element>
          
          <element type="staticText" rect="relative: 5, 23, 17, 27" tooltip="Select the Grid Size">
            <attributes>
              <attribute key="Caption" value="Grid Size:" />
              <attribute key="HTextAlign" value="lowerRight" />
              <attribute key="VTextAlign" value="center" />
            </attributes>
          </element>          
          
          <element type="Selector" rect="relative: 18, 24, 33, 26">
            <attributes>
              <attribute key="Name" value="gridsize" />
              <attribute key="Selected" value="3" />
            </attributes>
            <custom>
              <attribute key="options" value="2;4;8;12;16" />
            </custom>
          </element>
          
          <element type="staticText" rect="relative: 5, 28, 33, 29" tooltip="When will the race be finished?">
            <attributes>
              <attribute key="Caption" value="Race Auto Finish" />
              <attribute key="HTextAlign" value="center" />
              <attribute key="VTextAlign" value="center" />
            </attributes>
          </element>          
          
          <element type="Selector" rect="relative: 5, 30, 33, 32">
            <attributes>
              <attribute key="Name" value="race_finish" />
              <attribute key="Selected" value="0" />
            </attributes>
            <custom>
              <attribute key="options" value="All Players finished;Second to Last finished;First Player finished;All Players and AI finished" />
            </custom>
          </element>
          
          <element type="staticText" rect="relative: 5, 36, 17, 38" tooltip="Network Game">
            <attributes>
              <attribute key="Caption" value="Network Game:" />
              <attribute key="HTextAlign" value="lowerRight" />
              <attribute key="VTextAlign" value="center" />
            </attributes>
          </element>
          
          <element type="Selector" rect="relative: 18, 36, 33, 38">
            <attributes>
              <attribute key="Name" value="network_game" />
              <attribute key="Selected" value="0" />
            </attributes>
            <custom>
              <attribute key="options" value="None;Start Server;Join Server" />
            </custom>
          </element>
